			<class name="com.jira.tests.CommentAPIs.AddComment"></class>  
			<class name="com.jira.tests.CommentAPIs.GetComment"></class>
			<class name="com.jira.tests.CommentAPIs.UpdateComment"></class>
			<class name="com.jira.tests.CommentAPIs.DeleteComment"></class>
	   </classes>
